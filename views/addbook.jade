extends layout

block content
	- if(err)
		div.alert.alert-error= err
	- if(success)
		div.alert.alert-info= success
	form.form-horizontal(action="/book/savebook", method="get")
		div.control-group
			label.control-label(for="LB-isbn") ISBN编码:
			div.controls
				input.input-large(type="text", name="isbn", id="LB-ISBN", placeholder="请填写图书ISBN编码")
		div.control-group
			label.control-label(for="LB-bookcate") 图书分类:
			div.controls
				input.input-large(type="text", name="bc", id="LB-bookcate", placeholder="图书分类（1,2,3）")
		div.control-group
			label.control-label(for="LB-number") 可借册数:
			div.controls
				input.input-large(type="text", name="number", id="LB-number", placeholder="可借册数（1,2,3）", value="1")
		div.control-group
			div.controls
				input.btn.btn-primary(type="submit", value="添加")
	//a(href="/book/savebook") 添加书籍