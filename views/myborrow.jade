extends layout

block content
	- if(err)
		div.alert.alert-error= err
	- if(success)
		div.alert.alert-info= success
	div.borrow-main
		ul.borrow-list
			- if(list)
			- for ls in list
				li.item #{ls.bookname}
					- if(ls.status === 2) 
						| &nbsp;&nbsp;<span class="status-info">正在阅读，</span><a href="/pushreturn?id=#{ls._id}">申请还书</a>
					- else if(ls.status === 1)
						| &nbsp;&nbsp;<span class="status-info">借书申请已提交，等待管理员审核</span>
					- else if(ls.status === 3)
						| &nbsp;&nbsp;<span class="status-info">还书申请已提交</span>
					- else if(ls.status === 4)
						| &nbsp;&nbsp;<span class="status-info">还书申请已通过</span>
					- else if(ls.status === 5)
						| &nbsp;&nbsp;<span class="status-info">借书申请被拒绝</span>
					- else if(ls.status === 6)
						| &nbsp;&nbsp;<span class="status-info">管理员代还</span>